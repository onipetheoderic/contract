<div class="page-content">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
              
            </div>
        </div>     
        <!-- end page title -->
<input type="hidden" value='{{data.all_test}}' id="all_test"/>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-center mt-4">
                    <h4>Quickly Take the Test</h4>
        <p class="text-muted mt-3 mb-4"> Click the submit button before the Time elapse</p>

                </div>
            </div><!-- end col -->
        </div><!-- end row -->
        <div class="row mt-5">
            <div class="col-lg-2">
    
</div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="mb-3 font-weight-bold text-uppercase">Personality Test <span id="divCounter" style="color:red;"></span> minutes!</h5>
                        <form id="quizForm" action="/personality" method="POST">
                        <div id="accordion">
                           
                           
                            {{#each data.all_tests}}
                            <div class="card mb-1">
                                <div class="card-header bg-white border-bottom-0 p-3" id="headingOne">
                                    <h5 class="m-0 font-size-16">
                                        <a href="#" data-toggle="collapse" data-target="#theoderic{{@index}}" aria-expanded="false"
                                            aria-controls="collapseOne" class="text-dark collapsed">
                                           {{this.question}}
                                        </a>
                                    </h5>
                                </div>

                                <div id="theoderic{{@index}}" class="collapse"
                                        aria-labelledby="headingOne" data-parent="#accordion">
                                    <div class="card-body text-muted pt-1">
                                        <div class="mt-3">
                                            {{#each this.answers}}
                                            <div class="custom-control custom-radio">
                                                <input required type="radio" id="{{../this.question_id}}{{this.id}}" name="{{../this.question_id}}" class="custom-control-input" value="{{this.id}}">
                                                <label class="custom-control-label" for="{{../this.question_id}}{{this.id}}">{{this.answer}}</label>
                                            </div>
                                           
                                            {{/each}}

                                        </div> 
                                    </div>
                                </div>
                            </div>
                          {{/each}}

                            
                        </div>
                         <button type="submit" class="btn btn-primary btn-block  px-4">Submit</button>
                        </form>
                       
                    </div>
                </div>


      


            </div> <!-- end col -->

<div class="col-lg-2">
    
</div>
</div>


        
    </div> <!-- container-fluid -->
</div>
